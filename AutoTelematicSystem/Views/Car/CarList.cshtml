@model IEnumerable<GetCarDto>
@{
    ViewData["Title"] = "Car List";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center my-4">
        <h2>Car List</h2>
        <a class="btn btn-success" asp-action="CarAdd"><i class="bi bi-plus-circle"></i> Add New Car</a>
    </div>

    <form method="get" asp-action="CarList" class="mb-4">
        <div class="input-group">
            <input type="text" name="search" class="form-control" placeholder="Search by License Plate" value="@ViewData["Search"]">
            <button class="btn btn-primary" type="submit"><i class="bi bi-search"></i> Search</button>
        </div>
    </form>

    <div class="row">
        @foreach (var car in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <a asp-action="CarDetail" asp-route-id="@car.Id" class="text-decoration-none">
                        <img src="@car.ImageUrl" class="card-img-top rounded-top" alt="Car Image" style="height: 200px; object-fit: cover;">
                    </a>
                    <div class="card-body">
                        <h5 class="card-title">@car.LicensePlate</h5>
                        <h6 class="card-subtitle text-muted">@car.Make @car.Model</h6>
                    </div>
                    <div class="card-footer text-center">
                        <a class="btn btn-info btn-sm" asp-action="CarDetail" asp-route-id="@car.Id">
                            <i class="bi bi-eye"></i> View Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
