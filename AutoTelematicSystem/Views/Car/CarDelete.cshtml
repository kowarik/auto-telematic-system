@model GetCarDto

@{
    ViewData["Title"] = "Delete Car";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-body">
            <h2 class="card-title text-danger text-center mb-4">Delete Car</h2>
            <h4 class="text-center text-muted mb-4">Are you sure you want to delete this car?</h4>

            <div class="row mb-4">
                <div class="col-md-4 text-center">
                    <img src="@Model.ImageUrl" alt="Car Image" class="img-fluid rounded shadow-sm" style="max-width: 100%;" />
                </div>
                <div class="col-md-8 d-flex align-items-center">
                    <div>
                        <h5 class="fw-bold">@Model.Make @Model.Model (@Model.YearOfManufacture)</h5>
                        <p class="mb-2"><strong>License Plate:</strong> @Model.LicensePlate</p>
                        <p><strong>Color:</strong> @Model.Color</p>
                        <p><strong>VIN:</strong> @Model.VIN</p>
                    </div>
                </div>
            </div>

            <div class="text-center">
                <form asp-action="CarDelete" method="post" class="d-inline">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger btn-lg px-5 me-2">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </form>
                <a asp-action="CarDetail" asp-route-id="@Model.Id" class="btn btn-secondary btn-lg px-5">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </div>
    </div>
</div>
