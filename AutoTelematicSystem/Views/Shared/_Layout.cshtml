<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AutoTelematicSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AutoTelematicSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex" style="min-height: 100vh;">
        <div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark w-auto">
            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                <i class="bi bi-car-front-fill" style="font-size: 32px;"></i>
                <span class="fs-4">AutoTelematicSystem</span>
            </a>
            <hr>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="Index" class="nav-link text-white"><i class="bi bi-house-door-fill me-2"></i>Home</a>
                </li>
                <li>
                    <a asp-controller="Car" asp-action="CarList" class="nav-link text-white"><i class="bi bi-ev-front-fill me-2"></i>Cars</a>
                </li>
                <li>
                    <a asp-controller="Sensor" asp-action="SensorTypeList" class="nav-link text-white"><i class="bi bi-speedometer me-2"></i>Sensor Types</a>
                </li>
            </ul>
            <hr>

            @if (User.Identity.IsAuthenticated)
            {
                <a class="nav-link text-white" asp-controller="Account" asp-action="Profile"><i class="bi bi-person-circle me-1"></i> Profile</a>
                <a class="nav-link text-white" asp-controller="Account" asp-action="Logout"><i class="bi bi-box-arrow-right me-1"></i> Log out</a>
            }
            else
            {
                <a class="nav-link text-white" asp-controller="Account" asp-action="Login"><i class="bi bi-box-arrow-in-right me-1"></i> Log in</a>
                <a class="nav-link text-white" asp-controller="Account" asp-action="Register"><i class="bi bi-person-plus me-1"></i> Register</a>
            }

        </div>

        <div class="flex-grow-1">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="@("https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js")"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
