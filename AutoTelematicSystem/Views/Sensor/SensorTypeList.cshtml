@model IEnumerable<GetSensorTypeDto>
@{
    ViewData["Title"] = "Sensor Type List";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary"><i class="bi bi-list"></i> Sensor Type List</h2>
        <a class="btn btn-success" asp-action="SensorTypeAdd">
            <i class="bi bi-plus-circle"></i> Add New Sensor Type
        </a>
    </div>

    <table class="table table-hover align-middle shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td class="text-center">
                        <a class="btn btn-info btn-sm" asp-action="SensorTypeDetail" asp-route-id="@item.Id">
                            <i class="bi bi-eye"></i> View
                        </a>
                        <a class="btn btn-warning btn-sm" asp-action="SensorTypeEdit" asp-route-id="@item.Id">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a class="btn btn-danger btn-sm" asp-action="SensorTypeDelete" asp-route-id="@item.Id">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
